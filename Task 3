import java.util.*;
import java.util.stream.*;

class Person {
    private String name;
    private int age;

    Person(String name, int age) {
        this.name = name;
        this.age = age;
    }

    String getName() {
        return name;
    }

    int getAge() {
        return age;
    }

    // Static method for filtering by age
    static boolean isOlderThanLimit(Person p, int limit) {
        return p.getAge() > limit;
    }
}

public class Main2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
System.out.println("Enter number of persons: ");
        int n = sc.nextInt();
        List<Person> persons = new ArrayList<>();
System.out.println("Enter name and age of each person: ");
        for (int i = 0; i < n; i++) {
            String name = sc.next();
            int age = sc.nextInt();
            persons.add(new Person(name, age));
        }
System.out.println("Enter age limit for filtering: ");
        int ageLimit = sc.nextInt();

       
        String sortedNames = persons.stream()
                .sorted(Comparator.comparing(Person::getName)) // method reference
                .map(Person::getName)
                .collect(Collectors.joining(" "));
        System.out.println(sortedNames);

       
        String filteredNames = persons.stream()
                .filter(p -> Person.isOlderThanLimit(p, ageLimit))
                .map(Person::getName)
                .collect(Collectors.joining(" "));
        System.out.println(filteredNames);

       
        String upperCaseNames = persons.stream()
                .map(Person::getName)
                .map(String::toUpperCase)
                .collect(Collectors.joining(" "));
        System.out.println(upperCaseNames);
    }
}
